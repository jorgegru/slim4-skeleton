{
    "name": "slim/slim4-skeleton",
    "description": "A Slim Framework 4 skeleton application",
    "license": "MIT",
    "keywords": ["slim", "framework", "skeleton", "psr7", "php-di"],
    "homepage": "http://github.com/slimphp/Slim-Skeleton",
    "type": "project",
    "require": {
        "php": "^8.3",
        "slim/slim": "^4.0",
        "slim/psr7": "^1.6",
        "slim/http": "^1.3",
        "slim/http-cache": "^1.1",
        "php-di/php-di": "^7.0",
        "monolog/monolog": "^2.0",
        "vlucas/phpdotenv": "^5.5",
        "league/plates": "^3.5",
        "slim/csrf": "^1.3",
        "slim/flash": "^0.4.0",
        "respect/validation": "^2.2",
        "illuminate/database": "^10.0",
        "illuminate/events": "^10.0",
        "illuminate/pagination": "^10.0",
        "illuminate/container": "^10.0",
        "illuminate/support": "^10.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "start": "php -S 0.0.0.0:8080 -t public",
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "migrate": "php -r 'require \"vendor/autoload.php\"; require \"database/migrations/2024_06_17_000000_create_users_table.php\"; (new CreateUsersTable())->up(); echo \"Migration completed successfully.\\n\";'"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
