# Ativa o módulo de reescrita
<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Se a requisição não for para um arquivo existente
    RewriteCond %{REQUEST_FILENAME} !-f
    # E não for para um diretório existente
    RewriteCond %{REQUEST_FILENAME} !-d
    # E não for para o próprio index.php
    RewriteCond $1 !^(index\.php|robots\.txt|favicon\.ico|public/.*)
    # Então redireciona para o index.php
    RewriteRule ^(.*)$ index.php?url=$1 [QSA,L]
</IfModule>
